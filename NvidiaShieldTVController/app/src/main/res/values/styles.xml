<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault" />
    
    <style name="TransparentTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="ConfigurationTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@color/config_background</item>
        <item name="android:textColor">@color/config_text_primary</item>
        <item name="android:textColorHint">@color/config_text_hint</item>
        <item name="android:colorAccent">@color/config_accent</item>
        <item name="android:colorPrimary">@color/config_primary</item>
        <item name="android:editTextStyle">@style/ConfigEditText</item>
        <item name="android:buttonStyle">@style/ConfigButton</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
    <style name="ConfigEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/config_edittext_background</item>
        <item name="android:textColor">@color/config_text_primary</item>
        <item name="android:textColorHint">@color/config_text_hint</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="ConfigButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/config_button_background</item>
        <item name="android:textColor">@color/config_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:sharedUserId="com.ashbreeze.shield_tv_controller.shared">

    <!-- Define custom permission for context receiver access -->
    <permission
        android:name="com.ashbreeze.shield_tv_controller.permission.UPDATE_STATE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.ashbreeze.shield_tv_controller.permission.UPDATE_STATE" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <!-- Allow querying/launching any package (for user-configured Netflix button target) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
        </intent>
    </queries>

    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:theme="@style/AppTheme"
        android:allowBackup="true"
        android:label="${launcherName}"
        android:icon="@drawable/${appPrefix}_ic_launcher"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        >
        <activity
            android:name=".MainActivity"
            android:banner="@drawable/${appPrefix}_ic_banner"
            android:icon="@drawable/${appPrefix}_ic_launcher"
            android:label="${launcherName}"
            android:logo="@drawable/${appPrefix}_ic_banner"
            android:theme="@style/TransparentTheme"
            tools:ignore="LockedOrientationActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.ashbreeze.shield_tv_controller.CurrentStateBroadcastReceiver"
            android:permission="com.ashbreeze.shield_tv_controller.permission.UPDATE_STATE"
            android:exported="true">
        </receiver>
    </application>

</manifest>